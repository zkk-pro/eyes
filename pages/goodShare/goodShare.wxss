page{
  background: #F8FAFC;
}

.choice-img{
  width: 100%;
  padding: 30rpx;
}
scroll-view{
  width: 100%;
  white-space: nowrap;
}
.choice-img image{
  display: inline-block;
  width: 31%;
  height: auto;
  margin-left: 15rpx;
  position: relative;
  border: 4rpx solid #F8FAFC;
}
.choice-img image:first-child{
  margin-left: 0rpx;
}
.choice-img image.cur{
  border: 4rpx solid #FFA300;
}
.choice-img image .icon-choosed2{
    position: absolute;
    top:8rpx;
    right: 8rpx;
    color: #999;
}
.choice-img image.cur .icon-choosed2{
  color: #FFA300;
}

canvas{
  width:630px;
  height: 1000px;
  margin-top: 1000px;
}
.share-img{
  width: 80%;
  height: auto;
  margin-left: 10%;
  margin-top: 0rpx;
  margin-bottom: 150rpx;
}
.btn{
  width: 100%;
  padding: 0 30rpx;
  position: fixed;
  bottom: 50rpx;
}
.btn text{
  display: block;
  width: 100%;
  height: 80rpx;
  color: #fff;
  background-color: #FFA300;
  font-size: 34rpx;
  border-radius: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
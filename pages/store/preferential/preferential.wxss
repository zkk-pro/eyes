page{
  background: #FFF;
}
.sec-category{
    z-index: 999;
    width:100%;
    border-bottom: 1px solid #F2F2F2;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    background: #FFF;
}
.icon-gengduo{
  position: fixed;
  color: #FE992E;
  width: 80rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  top: 0rpx;
  left: 0rpx;
  font-size: 36rpx;
  background: #FFF;
  border-bottom: 1px solid #F2F2F2;
}
.sec-category .sec{
  display: inline-block;
  padding: 0rpx 30rpx;
  color:#999999;
  font-size: 30rpx;
}
::-webkit-scrollbar {
  width:0;  
  height:0;  
  color:transparent;
}  
.sec-category .sec:nth-child(2){
  margin-left: 0rpx;
}
.sec-category .sec text:first-child{
  display: block;
  width: 100%;
  padding: 20rpx 0;
}
.sec-category .sec.cur{
   color: #333;
   font-weight: 700;
   font-size:32rpx; 
}
.sec-category .sec .border{
  display: block;
  width: 100%;
  height: 6rpx;
  border-radius: 6rpx;
  background: #FFF;
}
.sec-category .sec.cur .border{
  background: #FE942A;
}
.store-goods-list{
  width:100%;
  /* min-height: 100vh; */
  background: #fafafa;
  margin-top: 100rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
}
.store-goods-list .shop_item{
  position: relative;
  display: flex;
  flex-direction: column;
  width: 335rpx;
  height: 511rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.store-goods-list .shop_item:nth-child(2n){
  margin-right: 0;
}
.store-goods-list .shop_item .shop_item_img{
  width: 100%;
  height: 335rpx;
}
.shop_item .shop_item_bottom{
  box-sizing: border-box;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 10rpx 0 15rpx 10rpx;
}
.shop_item_bottom .shop_item_bottom_title{
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.shop_item_bottom .shop_item_bottom_num{
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}
.shop_item_bottom .shop_item_bottom_money{
  display: flex;
  align-items: flex-end;
  margin-right: 5rpx;
}
.shop_item_bottom_money .bottom_money_label{
  font-size: 22rpx;
  line-height: 22rpx;
  font-weight: bold;
  color: #ff502c;
}
.shop_item_bottom_money .bottom_money_price{
  color: #ff502c;
  font-size: 40rpx;
  line-height: 40rpx;
  font-weight: bold;
}
.shop_item_bottom_money .bottom_money_hint{
  font-size: 20rpx;
  line-height: 20rpx;
  color: #ccc;
}
.shop_item .shop_item_go{
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  width: 44rpx;
  height: 44rpx;
  z-index: 99;
}






.store-goods-list .store-goods{
  width: 100%;
  padding: 30rpx;
  border-bottom: 1px solid #F2F2F2;
}
.store-goods-list .store-goods:first-child{
  margin-top: 0rpx;
}
.store-goods-list .store-goods .g-left image{
   width: 180rpx;
   height: auto;
   border:1px solid #EEE;
   border-radius: 4rpx;
   margin-right: 20rpx;
}
.store-goods-list .store-goods .g-right{
  flex: 1;
}
.store-goods-list .store-goods .g-right .g-title{
  width: 100%;
  font-size: 30rpx;
  text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}
.store-goods-list .store-goods .g-right .g-info{
  margin-bottom: 6rpx;
}
.store-goods-list .store-goods .g-right .g-info .i-l text:first-child{
  color: #FD4F27;
  margin-right: 10rpx;
  font-size: 32rpx;
}
.store-goods-list .store-goods .g-right .g-info .i-l text:nth-child(2){
  color: #9A9A9A;
  text-decoration: line-through;
  font-size: 26rpx;
}
.store-goods-list .store-goods .g-right .g-info .i-l text.commission{
  width: 130rpx;
  height: 35rpx;
  line-height: 35rpx;
  border-radius: 5rpx;
  color: #D8B778;
  background: #373636;
  font-size: 20rpx;
  text-align: center;
  margin-left: 15rpx;
}
.store-goods-list .store-goods .g-right .g-info .buy-btn{
   width: 130rpx;
   height: 45rpx;
   text-align: center;
   line-height: 45rpx;
   border-radius: 45rpx;
   color: #FFF;
   background: linear-gradient(to right,#FFA300,#FEBF2A);
   margin-left: 10rpx;
   font-size: 24rpx;
}
/*侧边分类*/
.box-cate{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top:0;
  background: rgba(0, 0, 0,0.3);
  z-index: 100;
}
.box-cate .left-scroll{
  width: 280rpx;
  height: 100%;
  background: #FFF;
}
.box-cate .left-scroll .fir-cate{
  width:100%;
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #F2F2F2;
  font-size: 30rpx;
  position: relative;
}
.box-cate .left-scroll .fir-cate .line{
    width: 8rpx;
    border-radius: 8rpx;
    height: 60rpx;
    background: #FFF;
    position: absolute;
    top: 10rpx;
    left: 0rpx;
}
.box-cate .left-scroll .firCur{
  color: #FE992E;
  font-size: 32rpx;
  font-weight: 600;
}
.box-cate .left-scroll .firCur .line{
  background: #FE942A;
}

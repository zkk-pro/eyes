/*底部*/
.bottom-content{
    overflow: hidden;
    position: fixed;
    width: 100%;
    bottom: calc(101rpx + (constant(safe-area-inset-bottom) / 2));/*兼容 IOS<11.2*/
    bottom: calc(101rpx + (env(safe-area-inset-bottom) / 2));/*兼容 IOS>11.2*/
    border-top: 1rpx solid #ececec ;
    border-bottom: 1rpx solid #ececec ;
    background: #ffffff;
    height: 90rpx;
    left: 0;
    z-index: 1000;
}

.bottom-content .total-price-box{
  float: left;
  width: 75%;
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
  font-size: 15px;
  color: #999999;
}
.bottom-content .total-price-box .box-left{
  float: left;
}
.bottom-content .total-price-box .total-price{
  float: left;
}
.bottom-content .total-price-box .checkbox{
  position: absolute;
  top: 10rpx;
  left: 20rpx;
  width: 18px;
  height: 18px;
}
.bottom-content .total-price-box .checkbox image{
 width: 100%;
 height: 100%;
}
.bottom-content .total-price text:first-child{
  font-size: 24rpx;
  margin-right: 30rpx;
}
.bottom-content .total-price text:last-child{
  color: #FE6527;
}

page{
    padding-bottom: 120rpx;
}
.goods-info{
    width: 100%;
    padding: 30rpx;
    background: #FFF;
}
.goods-info image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
}
.goods-info > view:last-child{
    flex: 1;
    height: 180rpx;
}
.title{
    width: 100%;
    padding: 20rpx 30rpx;
    background: #FFF;
    border-top:1px solid #EEE;
    font-weight: bold;
    font-size: 30rpx;
}
.property{
    width: 100%;
    padding: 20rpx 30rpx;
    background: #FFF;
    border-top:1px dotted #EEE;
}
.property view:first-child{
    width: 80%;
    color: #666;
}

.btn-area{
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
}
.btn-area .click-btn{
    width: calc(100% / 3);
    height: calc(80rpx + (constant(safe-area-inset-bottom) / 2));/*兼容 IOS<11.2*/
    padding-bottom:calc(0rpx + (constant(safe-area-inset-bottom) / 2));
    height: calc(80rpx + (env(safe-area-inset-bottom) / 2) ); /*兼容 IOS>11.2*/
    padding-bottom:calc(0rpx + (env(safe-area-inset-bottom) / 2) );
    line-height: 80rpx;
    text-align: center;
    color: #FFF;
    background: #FE992E;
    font-size: 30rpx;
}
.btn-area .click-btn:first-child{
    background: #AAA;
}
.btn-area .click-btn:nth-child(2){
    background: #FF0000;
}
.btn-buy{
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50rpx;
    color: #FFF;
    background: #FE992E;
    text-align: center;

}
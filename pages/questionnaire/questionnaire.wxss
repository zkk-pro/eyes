page{
  min-height: 100vh;
  width: 100%;
  /* overflow: hidden; */
 }

 .mainList{
   position: relative;
   min-height: 100vh;
   z-index: 99;
   overflow: hidden;
 }

.pl-2 {
  height: 100%; 
}
.bgimg {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100%;
  /* min-height: 100vh; */
  z-index: 1;
}

.pageTitle {
    font-size: 34rpx;
    font-weight: bold;
    text-align: center;
    margin-top: 30rpx;
  }
.pageHint{
    font-size: 24rpx;
    text-align: center;
    margin: 20rpx 0 60rpx;
}
  
  .hint {
    color: red;
  }
  
  .title {
    font-size: 32rpx;
    margin-left: 8rpx;
  }
  
  .topicBox {
    display: flex;
    flex-wrap: wrap;
  }
  
  .topicBox .topic1 {
    width: 216.6rpx;
    height: 88rpx;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    border-radius: 10rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 28rpx;
    color: #333;
    background: #f2f4f7;
    transition: all 0.5s;
  }
  
  .topicBox .topic1:nth-child(3n) {
    margin-right: 0;
  }
  .topicBox .topic1:nth-last-child(1) {
    margin-right: 0;
  }
  
  .topicBox .topicClick1 {
    background: #006bff;
    color: #fff;
  }
  
  .topicBox .topic2 {
    display: flex;
    align-items: center;
    min-width: 216.6rpx;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    font-size: 28rpx;
    color: #333;
  }
  .topicBox .topic2:nth-child(3n) {
    margin-right: 0;
  }
  
  .topicBox .topic2:nth-last-child(1) {
    margin-right: 0;
  }
  
  .topicBox .topic2 radio {
    transform: scale(0.75);
  }
  .topic3{
    display: inline-block;
    align-items: center;
    margin-bottom: 30rpx;
    font-size: 28rpx;
    color: #333;
    min-width: 330rpx;
  }
  .topic3 checkbox{
    transform: scale(0.75);
  }
  .otherInput {
    height: 58rpx;
    font-size: 28rpx;
    background-color: #fff;
    width: 100%;
    border-radius: 10rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
    padding-left: 30rpx;
  }
  .mr_btn2{
    background-image: linear-gradient(to bottom,#fdb57a,#f48c65);
    width: 224rpx !important;
    height: 64rpx !important;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    line-height: 64rpx;
    border-radius: 10rpx;
    margin: 36px auto;
  }

  .pl-2{
    padding-left: 20rpx;
  }
  .pr-2{
      padding-right: 20rpx;
  }
  .mb-3{
      margin-bottom: 30rpx;
  }
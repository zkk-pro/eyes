/* pages/login/login.wxss */
page{
    background: #FFF;
}
.login-btn-wrap{
    justify-content: center;
    align-items: center;
    padding: 60rpx 20rpx 40rpx 20rpx;
    width: 100%;
}
.login-icon image{
    width: 150rpx;
    height: auto;
}
.login-info-wrap{
    align-items: center;
    justify-content: center;
    padding-top: 20rpx;
}
.login-title{
    font-size: 34rpx;
    padding: 20rpx 0rpx;
}
.login-tip{
    padding: 20rpx 0rpx;
    color: #999;
}
.login-btn{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 10rpx;
}
.login-btn button{
    width: 80%;
    margin-left: 10%;
    height:80rpx;
    background: #02BB00;
    color: #fff;
    font-size: 14px;
    border-radius:8rpx;
    text-align:center;
    line-height:80rpx;
}

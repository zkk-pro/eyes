page {
  font-family: "微软雅黑";
  font-size:28rpx;
  color:#333;
  padding-bottom: 150rpx;
  background: #F5F5F5
}
.account-area{
  background: #FFF;
}
.top-area{
  height: 80rpx;
  padding:0rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #EEE; 
}
.account-title{
  font-size: 32rpx;
}
.no-data-area{
  background: #F5F5F5;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-top: 30rpx;
  color:#7D7D7D;
}
.account-edit{
  color:#FFB22A;
}
/*账户列表*/
.account-item{
  display: flex;
  flex-direction: row;
  height: 90rpx;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 30rpx;
  border-bottom: 2rpx solid #EEE;
}
.account-name{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex:1;
  height: 90rpx;
}
.account-name .icon-choosed2{
  color:#FEB12F;
}
.account-type{
  margin-left: 20rpx;
}
.account-item .edit{
  color:#BDBDBD;
}
/*操作*/
.operate-area{
  display: flex;
  flex-direction: column;
  padding: 0rpx 30rpx;
  margin-top: 50rpx;
  font-size: 30rpx;
}
.add-account{
  height: 80rpx;
  background: #FFB22A;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 80rpx;
}
.add-text{
  color:#FFF;
}
.delete-account{
  height: 80rpx;
  background: #FFF;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 80rpx;
  margin-top: 30rpx;
  border: 2rpx solid #DDD;
  color:#999;
}
.icon-wancheng{
  color: #FFAB15;
}
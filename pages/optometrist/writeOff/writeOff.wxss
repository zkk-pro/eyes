page{
    background: #FFF;
}
.swiper-tab {
    width: 100%;
    border-top: 2rpx solid #F5F5F5;
    border-bottom: 2rpx solid #F5F5F5;
    text-align: center;
    line-height: 90rpx;
    position: fixed;
    z-index: 10;
    top: 0rpx;
    background: #fff;
    display:flex;
    justify-content: space-around;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    color: #9F9F9F;
    border-bottom: 5rpx solid #fff;
    position: relative;
}
.swiper-tab-list .border{
    position: absolute;
    display: inline-block;
    width: 100%;
    height: 8rpx;
    bottom: -4rpx;
    left: 0rpx;
    border-radius: 8rpx;
    background: #FFF;
}
.on {
    color: #333;
    font-weight: 600;

}
.on .border{
    background: #FFA300;
}

.record-list{
    width: 100%;
    padding: 0 30rpx;
    margin-top: 100rpx;
}
.record-list .record{
    width: 100%;

}
.record-list .record .top-desc{
    padding: 20rpx 0;
}
.record-list .record .detail{
    width: 100%;
    padding: 20rpx;
    background: #F7F9FB;
    border-radius: 5rpx;
    font-size: 28rpx;
    color: #777677;
}
.record-list .record .detail view:first-child{
    font-size: 30rpx;
    color: #1F1E1E;
    margin-bottom: 15rpx;
}
/*订单样式*/
.order-wrap {
    width: 100%;
    margin-top: 100rpx;
}

.goods-item {
    margin-top:20rpx;
    background-color: #fff;
}
.goods-item:first-child{
    margin-top:0rpx;
    background-color: #fff;
}
.goods-item .order-head  {
    display: flex;
    font-size: 28rpx;
    position: relative;
    padding: 20rpx;
    display:flex;
    justify-content: space-between;
}
.goods-item .order-head .order-head-top{
    display: flex;
    align-items: center;
}
.order-head-top .icon-el-icon-custom-order{
    font-size:28rpx;
    padding-right:16rpx;
}

.goods-item .order-head .order-state {
    color: #FFA300;
    position: absolute;
    right: 25rpx;
}

.goods-item .order-head .order-detail {
    position: absolute;
    right: 20rpx;
    top: 10rpx;
    background: #4caf50;
    width: 140rpx;
    line-height: 40rpx;
    border-radius: 6rpx;
    color: #fff;
    text-align: center;
    text-decoration: none;
}

.goods-item .order-body {
    font-size: 28rpx;
    background: #fff;
    padding: 0rpx 20rpx 20rpx 20rpx;
}

.goods-item .order-body .goods {
    display: flex;
    flex-direction: row;
    background: #F7F9FB;
    padding: 20rpx;
    border-radius: 10rpx;
    margin-top: 20rpx;
}
.goods-item .order-body .goods:first-child{
    margin-top: 0rpx;
}


.goods-item .order-body .goods .img {
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
    margin-right: 10px;
}

.goods-item .order-body .goods .goods-info {
    padding-top: 10rpx;
    flex: 1;
}

.goods-item .order-body .goods .goods-info .name {
    font-size: 30rpx;
    display: -webkit-box;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.goods-item .price-num {
    padding-left: 25rpx;
    flex-direction: column;
    display: flex;
    align-items: flex-end;
    margin-top: 10rpx;
}
.goods-item .order-body .goods .goods-info .price-num .total-moneys{
    color: #FE6726;
}
.goods-item .order-body .goods .goods-info .price-num .goods-num {
    position: absolute;
    right: 20rpx;
}
.property{
    font-size: 24rpx;
    color: #6A6A6A;
    margin:10rpx 0;
}
.goods-item .order-foot {
    font-size: 28rpx;
}

.goods-item .order-foot .total-price {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0rpx 20rpx 20rpx 20rpx;
    font-size:26rpx ;
}
.goods-item .order-foot .total-money{
    color: #F0733F;
}
.goods-item .order-foot .total-price .text-inde{
    text-indent: 1em;
}
page{
    background: #FFF;
}
.rechrage_fee{
    width: 100%;
}
.rechrage_fee image{
    width: 100%;
    height: auto;
    display: block;
    position: relative;
}
.rechrage_fee image .balance-pay{
    position: absolute;
    top: 20%;
    left: 0rpx;
    width: 100%;
    padding: 30rpx;
    color: #FFF;
}
.rechrage_fee image .balance-pay text:first-child{
    font-size: 24rpx;
}
.rechrage_fee image .balance-pay text:last-child{
    width: 100%;
    font-size: 50rpx;
    margin-top: 10rpx;
}
.input-recharge{
    width: 100%;
    padding: 0 30rpx;
}
.input-recharge .title{
    width: 100%;
    padding: 20rpx 0;
    font-size: 24rpx;
}
.input-recharge .input{
    width: 100%;
    border-bottom: 1px solid #F4F4F4;
    padding: 20rpx 0;
}
.input-recharge .input text:first-child{
    font-size: 24rpx;
}
.input-recharge .input input{
    flex: 1;
    margin-left: 5rpx;
    font-size: 45rpx;

}
.input-recharge .recharge-desc view{
    width: 100%;
    font-size: 26rpx;
    color: #A3A3A3;
    padding-top: 15rpx;
}
.btn-click{
    width: 100%;
    padding: 30rpx;
    position: fixed;
    left: 0;
    bottom: 100rpx;
}
.btn-click view{
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    border-radius: 80rpx;
    background: #FE8A22;
    color: #FFF;
}
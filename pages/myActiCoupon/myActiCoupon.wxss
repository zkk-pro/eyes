page{
    padding-bottom: 40rpx;
}
.top-nav{
    width: 100%;
    padding: 30rpx;
    background: #FFF;
    font-size: 30rpx;
    color: #6F6F6F;
}
.top-nav .cur{
    color: #333;
    font-weight: 600;
}
.coupon-list{
    width: 100%;
    padding:0 30rpx;
    margin-top: 10rpx;
}
.coupon-list image{
    width: 100%;
    height: auto;
    margin-top: 20rpx;
    position: relative;
}
.coupon-list image .coupon{
    width: 78%;
    position: absolute;
    top: 0;
    left: 0;
}
.coupon-list image .coupon view:first-child{
    padding: 25rpx 30rpx;
    font-size: 32rpx;
    font-weight: 600;
}
.coupon-list image .coupon view:nth-child(2){
    padding: 0rpx 30rpx;
    color: #FE545A;
    font-size: 40rpx;
    font-weight: 600;
}
.coupon-list image .coupon view:nth-child(3){
    color: #9B9B9B;
    padding: 10rpx 30rpx;
    font-size: 24rpx;
}